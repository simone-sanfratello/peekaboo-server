{
  "name": "peekaboo-server",
  "version": "0.0.2-dev",
  "description": "Reverse proxy for test doubles",
  "engines": {
    "node": ">=12"
  },
  "standard": {
    "globals": [
      "describe",
      "test",
      "expect",
      "beforeAll",
      "afterAll",
      "beforeEach"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "get-port": "^5.1.1",
    "got": "^11.6.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "node-fetch": "^2.6.1",
    "rimraf": "^3.0.2",
    "standard": "^14.3.4",
    "standard-version": "^9.0.0",
    "uuid": "^8.3.0"
  },
  "dependencies": {
    "fastify": "^3.4.1",
    "fastify-cors": "^4.1.0",
    "fastify-formbody": "^5.0.0",
    "fastify-peekaboo": "^1.3.0",
    "fastify-static": "^3.2.0",
    "fastify-websocket": "^2.0.7",
    "peppino": "^0.1.1-alpha",
    "pino": "^6.6.1",
    "pino-pretty": "^4.2.1",
    "request-as-curl": "^0.1.0",
    "superstruct": "0.8.3",
    "yargs": "^16.0.3"
  },
  "scripts": {
    "start": "bin/peekaboo-server.js",
    "start-dev": "node dev/server.js",
    "start-dev:watch": "nodemon dev/server.js --ignore src/ui",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "build": "cd src/ui; npm run build",
    "release": "standard-version"
  }
}
